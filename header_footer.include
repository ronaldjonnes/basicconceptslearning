<!doctype html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<link rel="stylesheet" href="bootstrap-5.0.0-beta3/bootstrap.min.css"/>
		<link rel="stylesheet" href="fontawesome/css/all.min.css">
		<link rel="icon" href="/resources/spiked.jpg"/>
		<title><play id="title"/></title>
		<style>
			.nav-item a.active { font-weight: 400; }
			#myBtn {display: none;position: fixed;bottom: 50px;right: 30px;}#myBtn:hover {background-color: #55555540;}
		</style>
		<play id="meta"/>
	</head>
	<body>
		<script src="bootstrap-5.0.0-beta3/bootstrap.bundle.min.js"/>
		<include path="nav.include"/>
		<main>
			<button class="btn btn-outline-dark" id="myBtn" onclick="topFunction()"><i class="fas fa-chevron-up fa-lg"></i></button>
			<play id="content"/>
			<!-- Modal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content" style="background-color:#fdf5e6d9">
						<div class="modal-header">
							<img src="/resources/spiked.jpg" width="45" alt="Spiked Balls"><span  class="m-1">BCMLP</span>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<p class="lead" style="font-size:22px; text-align: center"><strong>This Section is still under development.</strong></p>
						</div>
					</div>
				</div>
			</div>
			<script language="javascript">
				<!-- Get the button -->
				var mybutton = document.getElementById("myBtn");
				<!-- When the user scrolls down 20px from the top of the document, show the button -->
				window.onscroll = function() {scrollFunction()};
				function scrollFunction() {
					if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
						mybutton.style.display = "block";
					} else {
						mybutton.style.display = "none";
					}
				}
				<!-- When the user clicks on the button, scroll to the top of the document -->
				function topFunction() {
					document.body.scrollTop = 0;
					document.documentElement.scrollTop = 0;
				}
			</script>
		</main>
		<footer class="footer py-3 px-2 bg-dark text-white">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-7"></div>
					<div class="col-lg-5 text-end">
						<div>Egg-SGML v <eggsgml_version/> &bull; Revision 1.2</div>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>